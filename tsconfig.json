{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["es6"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "rootDir": "./src",
        "paths": { "@/*": ["./src/*"] },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
